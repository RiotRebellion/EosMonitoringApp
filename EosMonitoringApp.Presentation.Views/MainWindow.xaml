<Window x:Class="EosMonitoringApp.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EosMonitoringApp.Presentation.Views"
        xmlns:vm="clr-namespace:EosMonitoringApp.Presentation.ViewModels;assembly=EosMonitoringApp.Presentation.ViewModels"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource ViewModelLocator}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition 
                Height="50pt"/>
        </Grid.RowDefinitions>
        <DataGrid 
            ItemsSource="{Binding AccountActivities}"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Width="*" 
                    Header="Пользователь"                                    
                    Binding="{Binding AccountName}"/>
                <DataGridTextColumn 
                    Header="Дата последней авторизации"                 
                    Binding="{Binding LastAutorizationDate}"                                   
                    CanUserSort="True"/>
                <DataGridTextColumn 
                    Header="Дней прошло"                         
                    Binding="{Binding DaysGone}"
                    CanUserSort="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel 
            Grid.Row="1"        
            HorizontalAlignment="Right"    
            VerticalAlignment="Center">
            <Button 
                Height="25" 
                Width="50"/>
        </StackPanel>
    </Grid>
</Window>
